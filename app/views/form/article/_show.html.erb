  <div class="px-4 pt-5 my-5 text-center border-bottom">
    <h1 class="display-4 fw-bold"><%= @article.title %></h1>
    <h4 class="display-8 fw-bold"><%= @article.category.kind %> <%= @article.console.typeconsole %></h4>
    <div class="col-lg-6 mx-auto">
      <p class="lead mb-4"><%= @article.content %></p>
      <% if current_user && @article.seller == current_user %>
      <div class="d-grid gap-2 d-sm-flex justify-content-sm-center mb-5">
        <%= link_to "Modifier cet article", edit_article_path(@article), class:"btn btn-primary btn-lg px-4 me-sm-3" %>
        <%= button_to "Supprimer cet article", @article, method: :delete, class:"btn btn-danger btn-lg px-4" %>
      </div>
      <% end %>
    </div>
    <div class="overflow-hidden" style="max-height: 30vh;">
      <div class="container px-5">
        <% if @article.buyer == nil %>
        <p> Ce produit est encore disponible </p>
        <% else %>
        <p> Ce produit a déjà été acheté </p>
        <% end %>
      </div>
    </div>
    <div class="overflow-hidden" style="max-height: 30vh;">
      <div class="container px-5">
        <h1><%= @article.price %> Euros</h1>
      </div>
    </div>
  </div>



