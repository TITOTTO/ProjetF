
    
      <div class="col">
        <div class="card shadow-sm">
        <%= image_tag "#{article.image}", height: 300 %>
            <center><p> <%= article.title %> </p></center>
          <div class="card-body">
                <p class="card-text"><%= article.content %> </p>
            <div class="d-flex justify-content-between align-items-center">
                  <div class="btn-group">
                    <%= link_to "Show", article, class: "btn btn-sm btn-outline-secondary" %>
                    

                    <% if current_user %>
                        <% if current_user == article.seller%>
                          <%= link_to "Edit", edit_article_path(article), class: "btn btn-sm btn-outline-secondary" %>
                        <% end %>
                      <%= form_with url: "/user/#{current_user.id}/carts", method: :post do |form| %>
                        <%= hidden_field_tag :article_id, article.id %>
                        <%= form.submit "Ajouter au caddie"%>
                      <% end %> 
                    <% end %>
                    
            </div>
              <small class="text-muted"><%= article.price %> Euros </small>
          </div>
        </div>
      </div>
      </div>



